<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>osxappbundle</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
        <source>target/${releaseName}</source>
        <destName>${releaseName}</destName>
        <outputDirectory>Contents/Resources/Java</outputDirectory>
    </file>
    <file>
      <source>src/osxappbundletemplates/Info.plist</source>
      <outputDirectory>Contents</outputDirectory>
      <fileMode>0744</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/osxappbundletemplates/launch.sh</source>
      <outputDirectory>Contents/MacOS</outputDirectory>
      <fileMode>0555</fileMode>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>
